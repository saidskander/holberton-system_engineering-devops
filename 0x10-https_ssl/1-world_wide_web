#!/usr/bin/env bash
# shellcheck disable=SC2086

Sub_domain () {
    line=$(dig "$2"."$1" | grep -A1 'ANSWER SECTION:' | tr '\t' '\n' | tail -2 | tr '\n' ' ')
    echo "$2 $line" | awk '{print "The subdomain " $1 " is a " $2 " record and points to " $3}'
}

if [ "$#" == 1 ]
then
    Sub_domain "$2.$1" "$2"
    Sub_domain "$1" "www"
    Sub_domain "$1" "lb-01"
    Sub_domain "$1" "web-01"
    Sub_domain "$1" "web-02"
elif [ "$#" == 2 ]
then
    Sub_domain "$1" "$2"
fi
